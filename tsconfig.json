{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es6", "es2020", "esnext.asynciterable"]
  },
  "include": [
    ".eslintrc.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
  ],
  "exclude": ["dist", "node_modules"]
}
